mixin reliquaries(ctx)
  - const { name, icon, rarity } = ctx
  .item.weapon-item
    .inner 
      img.icon(src=icon)
      div(class=[ 'star-div', 'rarity-' + rarity ])

mixin constellations(ctx)
  - const { icon, is_actived } = ctx
  div(class=[ 'fate-icon-item', 'fate-item', is_actived ? '' : 'lock' ])
    .inner 
      img.icon(src=icon)
      img.lock-icon(src="data:image/png;base64,")
  
mixin 1star
  span.star-span

doctype html 
html 
  head 
    style 
      include static/common.css
      include static/character.css

  body 
    .role-wrapper 
      .role-layout 
        //- .layout 
        //-   .navigation
        //-     .role-swiper-wrapper
        //-       .role-swiper-container
        //-         .pagination
        //-           .name= name 
        //-           .level= level 
        //-           .fav= fetter

        .role-layout--container(style={ 'background-image': `url(${image})` })
          .floats
            .weapon-block 
              .weapons 
                each item in reliquaries
                  +reliquaries(item)
          
            .fate-block 
              .fates 
                each item in constellations 
                  +constellations(item)
          
          .view-box 
            .header
              .text 武器
            .main
              .item 
                .inner 
                  img.icon(src=weapon.icon)
              .info
                .name
                  .text= weapon.name
                  .tag LV #{weapon.level}
                  .refine 精炼 #{weapon.refin} 阶
                .stars
                  - var weapon_rarity = 0
                  while weapon_rarity < weapon.rarity 
                    - weapon_rarity++
                    +1star
            .desc-block 
              p= weapon.desc

            .tip *所有数据以游戏内为准，此处仅供参考
    include footer.pug